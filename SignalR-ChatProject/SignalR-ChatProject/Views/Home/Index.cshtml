<input type="hidden" id="hdId" />
<input type="hidden" id="hdUserName" />
<br />

<div class="row">
    <div id="divChat" class="panel panel-default">
        <div class="panel-heading">
            <div id="time">
                <h5> <b>@DateTime.Now.ToString("HH:mm:ss")</b></h5>
                <h6>@DateTime.Now.ToString("dd/MM/yyyy")</h6>
            </div>
            <h3> Welcome <b><span id="spanUser"></span></b> !</h3>
        </div>

        <div class="panel-body">
            <div class="col-sm-9">
                <div id="divChatWindow"></div>
            </div>

            <div class="col-sm-3">
                <h6><b>Online Members (<strong id="onlineMember"></strong>) </b></h6> <hr />
                <div id="divusers"></div>
            </div>
        </div>

        <div class="panel-footer">
            <form class="form-inline">
                <input type="text" id="txtMessage" class="form-control" placeholder="Enter your message..." />
                <button id="btnSendMsg" class="btn btn-success">Send</button>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/App/chatJS.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/toastr.js"></script>

    <link href="~/Content/toastr.css" rel="stylesheet" />
    <link href="~/Content/chatStyle.css" rel="stylesheet" />
}